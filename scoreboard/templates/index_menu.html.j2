<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{ t.title }}</title>
  <style>{{ inline_css }}</style>
</head>
<body>
  <div class="page-shell">
  <header class="page-header">
    <div>
      <h1>{{ t.title }}</h1>
      <p class="meta">{{ t.generated_label }} {{ generated_at }}</p>
    </div>
  </header>

  <section class="nav-section">
    <h2>{{ t.pages_heading }}</h2>
    <ul class="link-list">
      <li><a href="threads.html">{{ t.threads_title }}</a></li>
      <li><a href="processes.html">{{ t.processes_title }}</a></li>
      {% if has_variants_page %}
      <li><a href="variants.html">{{ t.variants_title }}</a></li>
      {% endif %}
    </ul>
  </section>

  <section class="nav-section">
    <h2>{{ t.groups_heading }}</h2>
    <div class="group-columns">
      <div>
        <h3>{{ t.threads_group_heading }}</h3>
        <ul class="link-list">
          {% if threads_groups %}
            {% for g in threads_groups %}
              <li><a href="{{ g.href }}">{{ g.title }}</a></li>
            {% endfor %}
          {% else %}
            <li class="muted">{{ t.no_group_pages }}</li>
          {% endif %}
        </ul>
      </div>
      <div>
        <h3>{{ t.processes_group_heading }}</h3>
        <ul class="link-list">
          {% if processes_groups %}
            {% for g in processes_groups %}
              <li><a href="{{ g.href }}">{{ g.title }}</a></li>
            {% endfor %}
          {% else %}
            <li class="muted">{{ t.no_group_pages }}</li>
          {% endif %}
        </ul>
      </div>
    </div>
  </section>

  
      <section class="legend">
    <h2>{{ t.legend_heading }}</h2>
    <table class="legend-table">
      {% for term, desc in t.legend_pairs %}
      <tr><td class="legend-term">{{ term }}</td><td class="legend-def">{{ desc }}</td></tr>
      {% endfor %}
    </table>
  </section>

  </div>
</body>
</html>
